<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    tools:context="com.example.fancysherry.todolist.TodayFragment">


    <ListView
        android:id="@+id/today_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:clipToPadding="false"
        android:dividerHeight="1dp"
        android:divider="@drawable/line_today"
        android:layout_marginTop="105dp"
        android:scrollbarStyle="outsideOverlay"
        android:paddingBottom="50dp"/>


    <RelativeLayout
        android:id="@+id/clock_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffffff"

        >

        <ImageView
            android:id="@+id/clock_pic"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/clock_set"
            android:layout_gravity="left"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="30dp"/>

        <View
            android:id="@+id/divide_line"
            android:layout_below="@id/clock_pic"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/yellow_line"
            />

    </RelativeLayout>



    <com.example.fancysherry.todolist.MyView.TimeshowLayout
        android:id="@+id/time_show_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="122dp"
        android:background="#ffffff"
        android:clickable="true"
        >




        <ImageView
            android:layout_marginTop="30dp"
            android:id="@+id/remind_time_show"
            android:layout_width="210dp"
            android:layout_height="70dp"
            android:src="@drawable/time_brand"
            android:textColor="@color/black"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="520dp"
            android:layout_marginTop="-480dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/rope"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="520dp"
            android:layout_marginTop="-480dp"
            android:layout_marginLeft="175dp"
            android:background="@drawable/rope"/>

        <ImageView
            android:id="@+id/number_one"
            android:layout_width="40dp"
            android:layout_height="52dp"
            android:background="@drawable/zero"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="42dp"/>

        <ImageView
            android:id="@+id/number_two"
            android:layout_width="40dp"
            android:layout_height="52dp"
            android:background="@drawable/seven"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="42dp"/>

        <ImageView
            android:id="@+id/number_three"
            android:layout_width="40dp"
            android:layout_height="52dp"
            android:background="@drawable/eight"
            android:layout_marginLeft="108dp"
            android:layout_marginTop="42dp"/>

        <ImageView
            android:id="@+id/number_four"
            android:layout_width="40dp"
            android:layout_height="52dp"
            android:background="@drawable/nine"
            android:layout_marginLeft="158dp"
            android:layout_marginTop="42dp"/>
    </com.example.fancysherry.todolist.MyView.TimeshowLayout>





</FrameLayout>
